<Window x:Class="Завдання_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Завдання_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Margin="10" FontSize="18" HorizontalAlignment="Right"
                Name="cmdStart" Click="CmdStart_OnClick">Начать сортировку</Button>
        <StackPanel HorizontalAlignment="Center" Grid.ColumnSpan="2" Grid.Row="0" Grid.Column="0" Margin="5">
            <TextBlock Margin="10" FontSize="18">Ваш рандомный массив:</TextBlock>
            <TextBlock FontSize="16" Name="lblArray" Text="{Binding Array, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <TextBlock Margin="10" Grid.Row="1" Grid.Column="0" FontSize="17" Text="По возрастанию" Name="lblUp"/>
        <TextBlock Margin="10" Grid.Row="1" Grid.Column="1" FontSize="17" Text="По убыванию" Name="lblDown"/>
    </Grid>
</Window>
